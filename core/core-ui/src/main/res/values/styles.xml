<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Mova.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Mova.H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Mova.H6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Mova.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Mova.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Mova.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Mova.body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/urbanist_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Mova.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:layout_marginStart">@dimen/medium_margin</item>
    </style>

    <style name="Mova.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="rippleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_marginEnd">@dimen/medium_margin</item>
        <item name="android:background">@drawable/text_ripple</item>
        <item name="android:text">@string/see_all</item>
        <item name="android:textAppearance">@style/Mova.Caption</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="CircleImageLargeButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/iconSizeLarge</item>
        <item name="android:layout_height">@dimen/iconSizeLarge</item>
        <item name="android:background">@drawable/text_ripple</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="CircleImageSmallButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/iconSizeMedium</item>
        <item name="android:layout_height">@dimen/iconSizeMedium</item>
        <item name="android:background">@drawable/text_ripple</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/progressTint</item>
    </style>

    <style name="Mova.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/mova_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>